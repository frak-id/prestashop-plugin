{
    "require": {
        "kornrunner/keccak": "^1.1",
        "simplito/elliptic-php": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Simplito\\Elliptic\\": "vendor/simplito/elliptic-php/lib/",
            "kornrunner\\Keccak\\": "vendor/kornrunner/keccak/src/"
        }
    },
    "config": {
        "autoloader-suffix": "Frak"
    },  
    "scripts": {
        "build": [
            "php scripts/replace_backend_url.php",
            "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
            "@composer --no-plugins --no-interaction archive --format=zip",
            "php scripts/reput_backend_url.php"
        ]
    },
    "scripts-descriptions": {
        "build": "Build project artifact."
    },
    "archive": {
        "name": "frak-plugin",
        "exclude": [
            "**/*.md", 
            "composer.phar", 
            "composer.json", 
            "composer.lock", 
            "test/", 
            "scripts/", 
            "*.zip", 
            ".cursor/", 
            ".vscode/",
            ".gitignore"
        ]
    }
}
